<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollprofile"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:isScrollContainer="false"
    android:padding="4dp"
    tools:context="trkus.sellermodule.ProfileEdit">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Personal Details"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_editbox"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <EditText
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_editbox"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="Gender"
                android:inputType="text"
                android:padding="4dp" />

            <EditText
                android:id="@+id/et_blood_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/custom_editbox"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="Blood Group"
                android:inputType="number"
                android:padding="4dp" />

        </LinearLayout>


        <EditText
            android:id="@+id/et_industry_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_editbox"
            android:ems="10"
            android:focusable="false"
            android:hint="Industry Type"
            android:inputType="textPersonName"
            android:padding="4dp" />


        <EditText
            android:id="@+id/et_business_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_editbox"
            android:ems="10"
            android:focusable="false"
            android:hint="Category of Business"
            android:inputType="textPersonName"
            android:padding="4dp" />


        <EditText
            android:id="@+id/et_firm_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_editbox"
            android:ems="10"
            android:hint="Firm Name"
            android:inputType="textPersonName"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="Contact Details"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_editbox"
            android:gravity="center_horizontal"
            android:hint="Address"
            android:inputType="text"
            android:padding="4dp" />


        <EditText
            android:id="@+id/et_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_editbox"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:hint="State"
            android:inputType="text"
            android:padding="4dp" />


        <EditText
            android:id="@+id/et_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_editbox"
            android:gravity="center_horizontal"
            android:hint="Pincode"
            android:inputType="number"
            android:padding="4dp" />


        <EditText
            android:id="@+id/et_landline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_editbox"
            android:gravity="center_horizontal"
            android:hint="Landline No"
            android:inputType="phone"
            android:maxLength="10"
            android:padding="4dp" />


        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_editbox"
            android:gravity="center_horizontal"
            android:hint="Mobile No"
            android:inputType="phone"
            android:maxLength="10"
            android:padding="4dp" />


        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_editbox"
            android:gravity="center_horizontal"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="Emergency Contact Details"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/et_emergency_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/custom_editbox"
            android:gravity="center_horizontal"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:maxLength="10"
            android:padding="4dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layout_photo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/photo1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/myImageViewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/photo1"
                    android:layout_alignLeft="@+id/photo1"
                    android:layout_alignRight="@+id/photo1"
                    android:layout_alignTop="@+id/photo1"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="Office Photo"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_photo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/photo2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/txt_dob_certification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/photo2"
                    android:layout_alignLeft="@+id/photo2"
                    android:layout_alignRight="@+id/photo2"
                    android:layout_alignTop="@+id/photo2"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="Office Photo"
                    android:textColor="#000000" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_photo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/photo3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/txt_mother_aadhar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/photo3"
                    android:layout_alignLeft="@+id/photo3"
                    android:layout_alignRight="@+id/photo3"
                    android:layout_alignTop="@+id/photo3"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="Office Photo"
                    android:textColor="#000000" />
            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/btn_color"
            android:text="SAVE"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</ScrollView>